{
  "event": {
    "id": "{{ event_id }}",
    "description": "Lure event to trigger a conditional quest dialogue with {{ npc_name }}.",
    "trigger": {
      "type": "enter_room",
      "room": "{{ room_id }}"
    },
    "actions": [
      {
        "type": "play_cinematic",
        "scene_id": "{{ cinematic_id }}",
        "on_complete": [
          {
            "type": "set_milestone",
            "milestone": "{{ met_milestone }}"
          }
        ]
      }
    ],
    "conditions": [
      {
        "type": "milestone_not_set",
        "milestone": "{{ met_milestone }}"
      }
    ]
  },
  "cinematic": {
    "id": "{{ cinematic_id }}",
    "steps": [
      {
        "type": "dialogue",
        "actor": "{{ npc_name }}",
        "line": "{{ lure_dialogue }}"
      }
    ]
  },
  "dialogues": [
    {
      "id": "{{ quest_dialogue_id }}",
      "speaker": "{{ npc_name }}",
      "text": "{{ quest_dialogue_text }}",
      "trigger": "start_quest:{{ quest_id }},set_milestone:{{ quest_started_milestone }}",
      "condition": "milestone:{{ met_milestone }},milestone_not_set:{{ quest_started_milestone }}"
    },
    {
      "id": "{{ post_quest_dialogue_id }}",
      "speaker": "{{ npc_name }}",
      "text": "{{ post_quest_dialogue_text }}",
      "condition": "milestone:{{ quest_started_milestone }}"
    }
  ]
}
