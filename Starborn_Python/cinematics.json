  "scene_tinkering_tutorial": [
    {
      "type": "dialogue",
      "actor": "Jed",
      "line": "There you are. Let's start with Kasey's projector on the left."
    },
    {
      "type": "dialogue",
      "actor": "Jed",
      "line": "Tap the projector in the inventory list to drop it on the bench."
    },
    {
      "type": "wait_for_player_action",
      "action": "select_tinkering_item",
      "item_id": "broken_projector",
      "hint": "Tap the Broken Projector in the inventory list."
    },
    {
      "type": "dialogue",
      "actor": "Jed",
      "line": "Good. The recipe shows we just need a fresh circuit board."
    },
    {
      "type": "narration",
      "text": "If you have the parts, slot them into the highlighted sockets.",
      "duration": 2.5
    },
    {
      "type": "dialogue",
      "actor": "Jed",
      "line": "Now press the Craft button to seal the fix."
    },
    {
      "type": "wait_for_player_action",
      "action": "tinkering_craft",
      "item_id": "broken_projector",
      "hint": "Press the Craft button."
    },
    {
      "type": "dialogue",
      "actor": "Jed",
      "line": "Perfect. Kasey's star charts are back on schedule."
    },
    {
      "type": "dialogue",
      "actor": "Jed",
      "line": "Next up is Maddie's coffee grinder."
    },
    {
      "type": "dialogue",
      "actor": "Jed",
      "line": "Tap the grinder in your list so we can reinforce the housing."
    },
    {
      "type": "wait_for_player_action",
      "action": "select_tinkering_item",
      "item_id": "broken_coffee_grinder",
      "hint": "Select the Broken Coffee Grinder from your items."
    },
    {
      "type": "dialogue",
      "actor": "Jed",
      "line": "Good. Drop in the support struts and hit Craft to lock it back together."
    },
    {
      "type": "wait_for_player_action",
      "action": "tinkering_craft",
      "item_id": "broken_coffee_grinder",
      "hint": "Press Craft to reinforce the grinder."
    },
    {
      "type": "dialogue",
      "actor": "Jed",
      "line": "That grinder will chew through beans again in no time."
    },
    {
      "type": "dialogue",
      "actor": "Jed",
      "line": "Last piece: Ellie's arcade display."
    },
    {
      "type": "dialogue",
      "actor": "Jed",
      "line": "Tap the display, thread in the new filament, and give it a spark."
    },
    {
      "type": "wait_for_player_action",
      "action": "select_tinkering_item",
      "item_id": "broken_arcade_display",
      "hint": "Tap the Broken Arcade Display."
    },
    {
      "type": "dialogue",
      "actor": "Jed",
      "line": "Once the pieces are seated, hit Craft and we'll get her glowing."
    },
    {
      "type": "wait_for_player_action",
      "action": "tinkering_craft",
      "item_id": "broken_arcade_display",
      "hint": "Craft the display to finish the set."
    },
    {
      "type": "dialogue",
      "actor": "Jed",
      "line": "That's the set. Ellie owes you tacos for life. Take the parts back around town when you're ready."
    }
  ],
