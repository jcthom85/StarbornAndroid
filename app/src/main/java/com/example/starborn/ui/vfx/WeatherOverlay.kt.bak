@Composable
fun WeatherOverlay(
    weatherId: String?,
    modifier: Modifier = Modifier
) {
    val weatherEffect = when (weatherId?.lowercase()) {
        "dust" -> WeatherEffect.Dust(color = Color(1.0f, 0.93f, 0.75f))
        "rain" -> WeatherEffect.Rain(intensity = "medium", color = Color(0.8f, 0.9f, 1.0f))
        "storm" -> WeatherEffect.Storm(intensity = "medium", color = Color(0.8f, 0.9f, 1.0f), lightningColor = Color.White)
        "snow" -> WeatherEffect.Snow(intensity = "medium", color = Color.White)
        "cave_drip" -> WeatherEffect.CaveDrip(color = Color(0.6f, 0.8f, 1.0f))
        "starfall" -> WeatherEffect.Starfall(color = Color(0.9f, 0.95f, 1.0f))
        else -> null
    }

    Box(modifier = modifier.fillMaxSize()) {
        weatherEffect?.let { effect ->
            ParticleSystem(effect = effect)
        }
    }
}

@Composable
fun ParticleSystem(effect: WeatherEffect) {
    val particles = remember { mutableStateListOf<Particle>() }
    val random = remember { Random(System.currentTimeMillis()) }
    var viewportWidth by remember { mutableStateOf(0f) }
    var viewportHeight by remember { mutableStateOf(0f) }
    val lightningAlpha = remember { Animatable(0f) }
    var config by remember { mutableStateOf<ParticleConfig?>(null) }

    val density = LocalDensity.current

    Box(modifier = Modifier.fillMaxSize()) {
        Canvas(modifier = Modifier.fillMaxSize().onSizeChanged { size ->
            viewportWidth = size.width.toFloat()
            viewportHeight = size.height.toFloat()
        }) {
            particles.forEach { p ->
                val alpha = p.life / p.maxLife
                when (effect) {
                    is WeatherEffect.Dust -> {
                        drawOval(
                            color = p.color.copy(alpha = alpha * random.nextFloat() * (0.35f - 0.15f) + 0.15f),
                            topLeft = p.position,
                            size = androidx.compose.ui.geometry.Size(p.size.first * 2.5f, p.size.second)
                        )
                    }
                    is WeatherEffect.Rain, is WeatherEffect.Storm, is WeatherEffect.Starfall -> {
                        rotate(p.angle, pivot = p.position) {
                            drawRect(
                                color = p.color.copy(alpha = alpha * 0.25f),
                                topLeft = p.position,
                                size = androidx.compose.ui.geometry.Size(p.size.first, p.size.second)
                            )
                        }
                    }
                    is WeatherEffect.Snow -> {
                        drawCircle(
                            color = p.color.copy(alpha = alpha * 0.65f),
                            radius = p.size.first / 2,
                            center = p.position
                        )
                    }
                    is WeatherEffect.CaveDrip -> {
                        drawRect(
                            color = p.color.copy(alpha = alpha * 0.7f),
                            topLeft = p.position,
                            size = androidx.compose.ui.geometry.Size(p.size.first, p.size.second)
                        )
                    }
                }
            }
        }

        if (effect is WeatherEffect.Storm) {
            Box(
                modifier = Modifier
                    .fillMaxSize()
                    .background(effect.lightningColor.copy(alpha = lightningAlpha.value))
            )
        }
    }

    LaunchedEffect(effect, viewportWidth, viewportHeight) {
        if (viewportWidth == 0f || viewportHeight == 0f) return@LaunchedEffect

        config = with(density) {
            when (val currentEffect = effect) {
                is WeatherEffect.Dust -> {
                    ParticleConfig(
                        count = 0,
                        emitRate = 5,
                        life = 3.5f to 5.5f,
                        size = 4.dp.toPx() to 8.dp.toPx(),
                        spawnArea = Rect(-8.dp.toPx(), 0f, viewportWidth + 16.dp.toPx(), viewportHeight),
                        velocity = (viewportWidth * 0.05f) to (viewportWidth * 0.15f),
                        angle = 180f to 180f, // Move left
                        gravity = 0f to 0f,
                        drag = 0f,
                        color = currentEffect.color,
                        ttl = 5.5f,
                        turbulence = listOf(25f, 1.2f, 2 * Math.PI.toFloat())
                    )
                }
                is WeatherEffect.Rain, is WeatherEffect.Storm -> {
                    val intensity = if (currentEffect is WeatherEffect.Rain) currentEffect.intensity else (currentEffect as WeatherEffect.Storm).intensity
                    val rate = when (intensity) {
                        "low" -> 80
                        "high" -> 260
                        else -> 28
                    }
                    ParticleConfig(
                        count = 0,
                        emitRate = rate,
                        life = 0.6f to 1.2f,
                        size = 4.dp.toPx() to 48.dp.toPx(),
                        spawnArea = Rect(-viewportWidth * 0.1f, -48.dp.toPx(), viewportWidth * 1.2f, 1f),
                        velocity = (viewportHeight * 0.9f) to (viewportHeight * 1.3f),
                        angle = 250f to 290f,
                        gravity = 0f to 0f,
                        drag = 0f,
                        color = if (currentEffect is WeatherEffect.Rain) currentEffect.color else (currentEffect as WeatherEffect.Storm).color,
                        ttl = 1.2f
                    )
                }
                is WeatherEffect.Snow -> {
                    val rate = when (currentEffect.intensity) {
                        "low" -> 40
                        "high" -> 140
                        else -> 12
                    }
                    ParticleConfig(
                        count = 0,
                        emitRate = rate,
                        life = 3.0f to 5.5f,
                        size = 7.dp.toPx() to 11.dp.toPx(),
                        spawnArea = Rect(0f, -11.dp.toPx(), viewportWidth, 1f),
                        velocity = 30f to 55f,
                        angle = 90f to 90f,
                        gravity = 0f to 0f,
                        drag = 0f,
                        color = currentEffect.color,
                        ttl = 5.5f,
                        sway = listOf(20f, 1.8f, 2 * Math.PI.toFloat())
                    )
                }
                is WeatherEffect.CaveDrip -> {
                    ParticleConfig(
                        count = 0,
                        emitRate = 2,
                        life = 3.5f to 5.0f,
                        size = 2.5.dp.toPx() to 2.5.dp.toPx(),
                        spawnArea = Rect(0f, 0f, viewportWidth, 1f),
                        velocity = 0f to 0f,
                        angle = 90f to 90f,
                        gravity = 0f to (viewportHeight * 2.5f),
                        drag = 0f,
                        color = currentEffect.color,
                        ttl = 5.0f,
                        state = "hanging",
                        hangTime = 1.5f,
                        initialSize = 2.5.dp.toPx() to 2.5.dp.toPx()
                    )
                }
                is WeatherEffect.Starfall -> {
                    ParticleConfig(
                        count = 0,
                        emitRate = 12,
                        life = 0.4f to 0.8f,
                        size = 2.5.dp.toPx() to 60.dp.toPx(),
                        spawnArea = Rect(0f, -60.dp.toPx(), viewportWidth, 1f),
                        velocity = (viewportHeight * 2f) to (viewportHeight * 3f),
                        angle = 90f to 90f,
                        gravity = 0f to 0f,
                        drag = 0f,
                        color = currentEffect.color,
                        ttl = 0.8f
                    )
                }
            }
        }

        var particleAccumulator = 0f

        while (true) {
            val deltaTime = 1f / 60f // Assuming 60 FPS

            // Update existing particles
            val particlesToRemove = mutableListOf<Particle>()
            for (p in particles) {
                p.life -= deltaTime
                if (p.life <= 0) {
                    particlesToRemove.add(p)
                    continue
                }

                when (effect) {
                    is WeatherEffect.Dust -> {
                        val turbulence = p.turbulence!!
                        val amplitude = turbulence[0]
                        val freq = turbulence[1]
                        val phase = turbulence[2]
                        p.velocity = Offset(p.velocity.x, amplitude * sin(freq * p.life + phase))
                    }
                    is WeatherEffect.Snow -> {
                        val sway = p.sway!!
                        val amplitude = sway[0]
                        val freq = sway[1]
                        val phase = sway[2]
                        p.velocity = Offset(p.velocity.x + amplitude * sin(freq * p.life + phase), p.velocity.y)
                    }
                    is WeatherEffect.CaveDrip -> {
                        if (p.state == "hanging") {
                            p.hangTime = p.hangTime!! - deltaTime
                            if (p.hangTime!! <= 0) {
                                p.state = "falling"
                            }
                            val progress = 1.0f - (p.hangTime!! / config!!.hangTime!!)
                            p.size = p.initialSize!!.first to p.initialSize!!.second + (p.initialSize!!.second * 4 * progress)
                        } else {
                            p.velocity = Offset(p.velocity.x, p.velocity.y + config!!.gravity.second * deltaTime)
                        }
                    }
                    is WeatherEffect.Rain, is WeatherEffect.Storm, is WeatherEffect.Starfall -> {
                        // No gravity for rain, storm, or starfall
                    }
                }

                p.position = Offset(p.position.x + p.velocity.x * deltaTime, p.position.y + p.velocity.y * deltaTime)

                if (p.position.y > viewportHeight) {
                    particlesToRemove.add(p)
                }
            }
            particles.removeAll(particlesToRemove)

            // Emit new particles
            config?.let {
                particleAccumulator += it.emitRate * deltaTime
                val numToEmit = particleAccumulator.toInt()
                if (numToEmit > 0) {
                    for (i in 0 until numToEmit) {
                        particles.add(Particle.create(it, random, viewportWidth, viewportHeight))
                    }
                    particleAccumulator -= numToEmit
                }
            }


            if (effect is WeatherEffect.Storm && random.nextFloat() < 0.005) {
                launch {
                    lightningAlpha.animateTo(0.8f, animationSpec = tween(50))
                    lightningAlpha.animateTo(0.4f, animationSpec = tween(50))
                    lightningAlpha.animateTo(0.9f, animationSpec = tween(40))
                    delay(80)
                    lightningAlpha.animateTo(0f, animationSpec = tween(600))
                }
            }

            delay(16) // Approximately 60 FPS
        }
    }
}
