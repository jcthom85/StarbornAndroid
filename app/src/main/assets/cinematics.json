[
  {
    "id": "scene_encounter_defeat_tip",
    "title": "Tactical Review",
    "steps": [
      {
        "type": "narration",
        "text": "The squad retreats to regroup after the defeat."
      },
      {
        "type": "narration",
        "text": "Patch up, recharge shields, and consider buffing allies before re-engaging. Status items and defensive skills can swing the next encounter."
      }
    ]
  },
  {
    "id": "scene_encounter_retreat_tip",
    "title": "Regroup Successful",
    "steps": [
      {
        "type": "narration",
        "text": "You slipped away before things turned critical."
      },
      {
        "type": "narration",
        "text": "Use the breathing room to craft support items, adjust party loadouts, or scout an alternate route."
      }
    ]
  },
  {
    "id": "scene_blocked_lock",
    "title": "Access Denied",
    "steps": [
      {
        "type": "narration",
        "text": "A security lock halts your progress."
      },
      {
        "type": "narration",
        "text": "Check your objectives or inventory\u2014certain rooms need power restored or a keycard before they open."
      }
    ]
  },
  {
    "id": "scene_blocked_enemy",
    "title": "Hostile Presence",
    "steps": [
      {
        "type": "narration",
        "text": "Sensors flag movement beyond the doorway."
      },
      {
        "type": "narration",
        "text": "Clear nearby threats or prepare a pre-emptive strike\u2014some exits stay sealed until the ambush is dealt with."
      }
    ]
  },
  {
    "id": "ollie_intro_scene",
    "title": "Main Road Encounter",
    "steps": [
      {
        "type": "dialogue",
        "speaker": "Ollie",
        "text": "Nova! There you are! We're late to meet Jed."
      },
      {
        "type": "dialogue",
        "speaker": "Ollie",
        "text": "Touch my name on your HUD, choose Talk, and let's catch up to him before he locks up."
      }
    ]
  },
  {
    "id": "scene_fishing_basics",
    "title": "Fishing Basics",
    "steps": [
      {
        "type": "narration",
        "text": "Tap Cast to launch the line and start the timing meter."
      },
      {
        "type": "narration",
        "text": "Watch the cursor sweep across the bar\u2014tap when it overlaps the highlighted zone to reel in a catch."
      },
      {
        "type": "narration",
        "text": "Stronger rods widen rare catch chances, while lures boost the odds of uncommon finds."
      }
    ]
  },
  {
    "id": "scene_mine_restore",
    "title": "Power Restored",
    "steps": [
      {
        "type": "narration",
        "text": "The generator hums to life, flooding the tunnels with light."
      },
      {
        "type": "narration",
        "text": "Somewhere deeper within the mine, heavy locks release."
      }
    ]
  },
  {
    "id": "scene_collect_display",
    "title": "Collector",
    "steps": [
      {
        "type": "narration",
        "text": "Ellie carefully packs the shattered display into a crate for repair."
      }
    ]
  },
  {
    "id": "scene_collect_grinder",
    "title": "Collector",
    "steps": [
      {
        "type": "narration",
        "text": "Maddie hands over the grinder, hopeful you can repair it."
      }
    ]
  },
  {
    "id": "scene_collect_projector",
